{
"manifest_version": 2,

"name": "Facebook minimiser",
 "version": "1.0",
 "description": "This extension restyles Facebook.com and removes distractions",

 "content_scripts": [
	 {
		 "matches": ["https://www.facebook.com/*"],
	 	"css": ["main.css"],
	 	"js": ["inject.js"]
	 }
 ],
 
 "page_action": {
    "default_icon": "images/block-128.png",
    "default_title": "FB minimiser"
  }
}